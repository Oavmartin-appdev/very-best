<div class="row mb-1 mt-2">
  <div class="col-md-3">
    <%= search_form_for @q, :class => "collapse", :id => "dishes_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>

  </div>

    <div class="form-group">
        <% Cuisine.all.each do |cuisine| %>
        <li class="list-unstyled">
           <%= check_box_tag('q[cuisine_id_eq_any][]', cuisine.id) %>
           <%= cuisine.name %>
        </li>
        <% end %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/dishes" class="btn btn-secondary btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-secondary btn-block mb-1" data-toggle="collapse" href="#dishes_filters">
      Show Filters
    </a>
  </div>

  <div class="col-md-6 col-md-offset-3">
    <table class="table table-striped table-hover">
      <tr>
        <th>The very best...</th>
        <th>Is at...</th>
        <th></th>
      </tr>

      <% @dishes.each do |dish| %>
      <tr>

        <td>
          <a  href="/dishes/<%= dish.id %>"><%= dish.name %></a>
        </td>
        
        <td>
          <%= select_tag(:venue_id, options_from_collection_for_select(Venue.all, :id, :name), :class => "form-control",:prompt => 'Choose a venue...') %>
        </td>

        <td>
          <% if dish.cuisine.present? %>
            <a href="/cuisines/<%= dish.cuisine.id %>">
              <%= dish.cuisine.name %>
            </a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @dishes, theme: 'twitter-bootstrap-4' %>
  </div>

  <div class="col-md-3">
    <a href="/venues/new" class="btn btn-default btn-success btn-block">New Venue</a>
  </div>

</div>